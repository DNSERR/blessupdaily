{
  "manifest_version": 3,
  "name": "Bless Up Daily â€“ Christian Edition",
  "version": "1.2",
  "description": "Uplifting Bible verses delivered once a day. Share the Word. Inspire hearts.",
  "permissions": [
    "storage",
    "notifications",
    "alarms"
  ],
  "host_permissions": [
    "https://buy.stripe.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Bless Up Daily",
    "default_icon": {
      "48": "images/bible_icon.png",
      "128": "images/bible_icon.png"
    }
  },
  "icons": {
    "48": "images/bible_icon.png",
    "128": "images/bible_icon.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "verses.js",
        "images/bible_icon.png",
        "images/badge1.png",
        "images/badge2.png",
        "images/badge3.png",
        "images/badge4.png",
        "images/badge5.png",
        "images/badge6.png",
        "images/badge7.png"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
